@model RazorBlog.Models.Post

<p class="post-meta">
    @if (Model.Category != null)
    {
        <strong>In</strong> <a href="@Blog.Settings.ArchiveSlug/category/@Model.Category.Slug">@Model.Category.Title</a>
        <span class="sep">&#9670;</span>
    }
    @if (Model.Tags.Count > 0)
    {
        <strong>Tags</strong>
        @foreach (var tag in Model.Tags) 
        {
            <span class="tag"><a href="@Blog.Settings.ArchiveSlug/tag/@tag.Slug">#@tag.Title</a></span>
        }
        <span class="sep">&#9670;</span>
    }
    <strong>Published</strong>
    @Model.Published.Value.ToString("yyyy-MM-dd")
</p>
