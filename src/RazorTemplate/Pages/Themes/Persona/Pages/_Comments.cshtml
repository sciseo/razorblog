@page
@{
    Layout = "";
}

@foreach (var comment in Blog.Comments.Items)
{
    <div class="row justify-content-center comment">
        <div class="col-sm-10">
            <div class="row">
                <div class="col-sm-2">
                    <img src="@Blog.GetGravatar(comment.AuthorEmail, 140)" alt="Gravatar">
                </div>
                <div class="col-sm-10">
                    <h4>@comment.AuthorName</h4>
                    <p class="post-meta">
                        @comment.Published.ToLongDateString()
                    </p>
                    @Html.Raw(comment.Body)
                </div>
            </div>
        </div>
    </div>
}